<templateSet group="PHP">
  <template name="echo" value="echo &quot;$END$&quot;;" description="'echo' statement" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="PHP Statement" value="true" />
    </context>
  </template>
  <template name="for" value="for ($$$VAR$=0;$$$VAR$&lt;=$TO$;$$$VAR$++){&#10;    $END$&#10;}" toReformat="false" toShortenFQNames="true">
    <variable name="VAR" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="TO" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="try" value="try{&#10;    $END$&#10;}catch($EXCTYPE$ $$$EXCNAME$){&#10;    $EXCTODO$&#10;}" toReformat="true" toShortenFQNames="true">
    <variable name="EXCTYPE" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="EXCNAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="EXCTODO" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
</templateSet>